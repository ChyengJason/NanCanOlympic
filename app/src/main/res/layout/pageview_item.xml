<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/question_text"
        android:paddingTop="@dimen/small_margin"
        android:paddingLeft="@dimen/middle_margin"
        android:paddingRight="@dimen/middle_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/small_spacing"
        android:text="æ— "
        android:textColor="@color/black"
        android:textSize="@dimen/answer_question_font" />
    <ListView
        android:id="@+id/option_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/much_big_margin"
        android:paddingLeft="@dimen/middle_margin"
        android:paddingRight="@dimen/middle_margin"
        android:divider="#00000000"
        android:dividerHeight="@dimen/practise_answer_item_divider">
    </ListView>
    <Button
        android:id="@+id/confirm"
        android:layout_marginTop="@dimen/practise_option_item_confirm_top_margin"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/practise_option_item_confirm_width"
        android:layout_height="@dimen/practise_option_item_confirm_height"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="@string/confirm"
        android:textSize="@dimen/big_font"/>
</LinearLayout>