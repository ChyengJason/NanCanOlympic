<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/root_view_bg">

    <include layout="@layout/normal_toolbar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/much_big_margin"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/app_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:src="?attr/app_icon"/>

        <TextView
            android:id="@+id/app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_gravity="center_horizontal"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/big_font"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp">

        <TextView
            android:id="@+id/app_resource"
            android:layout_marginTop="@dimen/much_big_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/about_tips"
            android:textColor="?attr/secondary_text_color"
            android:textSize="@dimen/middle_font"
            android:clickable="true"/>

        <TextView
            android:id="@+id/app_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/middle_margin"
            android:text="@string/person_email"
            android:textColor="?attr/secondary_text_color"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/middle_font" />
    </LinearLayout>
</RelativeLayout>